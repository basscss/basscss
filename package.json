{
  "name": "basscss",
  "version": "8.1.0",
  "description": "Low-level CSS toolkit",
  "style": "src/basscss.css",
  "main": "src/basscss.css",
  "scripts": {
    "build": "postcss src/basscss.css -d css --config postcss.config.js",
    "minify": "postcss css/basscss.css -u cssnano -o css/basscss.min.css --no-map",
    "important": "postcss css/basscss.css -u postcss-importantly -o css/basscss-important.css",
    "important:min": "postcss css/basscss.css -u postcss-importantly -u cssnano -o css/basscss-important.min.css",
    "custom-props": "postcss src/basscss.css -u postcss-import -u postcss-custom-media -o css/basscss-cp.css",
    "custom-props:min": "postcss src/basscss.css -u postcss-import -u postcss-custom-media -u cssnano -o css/basscss-cp.min.css",
    "prepare": "mkdir -p css && npm run build && npm run important && npm run custom-props && npm run minify && npm run important:min && npm run custom-props:min",
    "start": "postcss src/basscss.css -d css --config postcss.config.js -w",
    "karma": "karma start",
    "karma:watch": "karma start --no-single-run",
    "mocha": "mocha test/test",
    "test": "npm run mocha && npm run karma"
  },
  "dependencies": {
    "basscss-align": "^1.0.2",
    "basscss-border": "^4.0.2",
    "basscss-flexbox": "^1.0.2",
    "basscss-grid": "^2.0.0",
    "basscss-hide": "^1.0.1",
    "basscss-layout": "^3.1.0",
    "basscss-margin": "^1.0.9",
    "basscss-padding": "^1.1.3",
    "basscss-position": "^2.0.3",
    "basscss-type-scale": "^1.0.6",
    "basscss-typography": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "babel-loader": "^8.0.5",
    "babel-preset-es2015": "^6.3.13",
    "chai": "^4.2.0",
    "css-loader": "^2.1.1",
    "css-mixed-properties": "^1.1.0",
    "cssnano": "^4.1.10",
    "cssstats": "^3.3.0",
    "json-loader": "^0.5.4",
    "karma": "^4.1.0",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.9.0",
    "karma-cli": "^2.0.0",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "karma-webpack": "^3.0.5",
    "mocha": "^6.1.4",
    "postcss": "^8.2.10",
    "postcss-calc": "^7.0.1",
    "postcss-cli": "^6.1.2",
    "postcss-color-function": "^4.1.0",
    "postcss-custom-media": "^7.0.8",
    "postcss-custom-properties": "^8.0.10",
    "postcss-discard-comments": "^4.0.2",
    "postcss-import": "^12.0.1",
    "postcss-importantly": "0.0.7",
    "postcss-loader": "^3.0.0",
    "postcss-remove-root": "0.0.2",
    "postcss-reporter": "^6.0.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.30.0"
  },
  "author": "Brent Jackson",
  "license": "MIT",
  "keywords": [
    "atomic css",
    "functional css",
    "css",
    "framework",
    "oocss",
    "basscss"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/basscss/basscss.git"
  },
  "bugs": {
    "url": "https://github.com/basscss/basscss/issues"
  },
  "homepage": "https://github.com/basscss/basscss"
}
